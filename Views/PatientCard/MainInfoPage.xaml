                                                           ValueMember="Id" DisplayMember="Name" Margin="0 0 10 0"
                                                      >
                                        <dxe:ComboBoxEdit.StyleSettings>
                                            <dxe:RadioComboBoxStyleSettings/>
                                        </dxe:ComboBoxEdit.StyleSettings>
                                    </dxe:ComboBoxEdit>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Дата рождения:" Name="BirthDate" LabelPosition="Top" IsRequired="True"  Grid.Column="1">
                                    <dxe:DateEdit  EditValue="{Binding RowData.Source.Row.BirthDate, Mode=TwoWay, 
