                                              View="GroupBox"
                                      Orientation="Vertical"
                                      ItemLabelsAlignment="Local"
                                      IsCollapsible="True"
                                              >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0 0 0 5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="115"/>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <dxe:ImageEdit Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Margin="0 0 8 8"/>
          

                                        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0 0 0 5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <dxlc:LayoutItem Label="*Фамилия:" Name="LastName" LabelPosition="Top" IsRequired="True" Grid.Column="0">
                                                <dxe:TextEdit  Margin="0 0 8 0"/>
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="*Имя:" Name="FirstName" LabelPosition="Top" IsRequired="True"  Grid.Column="1">
                                                <dxe:TextEdit Margin="0 0 8 0"/>
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="Отчество:" Name="MiddleName" LabelPosition="Top"  Grid.Column="2">
                                                <dxe:TextEdit/>
                                            </dxlc:LayoutItem>
                                        </Grid>

                                        <Grid Grid.Row="1" Grid.Column="1"  Margin="0 0 0 5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                            </Grid.ColumnDefinitions>
                                            <dxlc:LayoutItem Label="СНИЛС:" Name="Snils" LabelPosition="Top"  Grid.Column="0">
                                                <dxe:TextEdit  Margin="0 0 8 0"/>
                                            </dxlc:LayoutItem>
                                            <dxlc:LayoutItem Label="Пол:" Name="Gender" LabelPosition="Top" Grid.Column="1">
