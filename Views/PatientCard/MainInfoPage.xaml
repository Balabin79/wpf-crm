<UserControl x:Class="Dental.Views.PatientCard.MainInfoPage"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                      xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
                      xmlns:converter="clr-namespace:Dental.Infrastructures.Converters" 
                      xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
                      xmlns:vm ="clr-namespace:Dental.ViewModels" 
                      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
                      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
                      xmlns:sys="clr-namespace:System;assembly=netstandard"
                      mc:Ignorable="d"
                      d:DesignHeight="300" d:DesignWidth="300"
                      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                      dx:ThemeManager.ThemeName="Office2019White">

    <UserControl.DataContext>
        <vm:PatientCardViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <vm:IdsViewModel x:Key="Ids"/>
        <converter:DateToStringConverter x:Key="dateToString" />
        <DataTemplate x:Key="ItemHeaderTemplateOne">
            <Grid>
                <TextBlock Text="One"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ItemContentTemplateOne">
            <Grid x:Name="Grid_Content" Margin="100, 0, 100, 0">
                <Grid>
                    <TextBlock Text="One"/>
                </Grid>
            </Grid>
        </DataTemplate>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <dxwui:PageAdornerControl Grid.Row="0" >
            <dxwui:PageAdornerControl.Header>
                <TextBlock Text="Административная" FontSize="22"/>
            </dxwui:PageAdornerControl.Header>
            <dxwui:PageAdornerControl.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Content="{Binding}" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                            <dxwui:NavigationButton FontSize="14" Margin="10, 0, 0, 0" Content="Список пациентов" NavigateTo="PatientsList"/>
                            <dxwui:NavigationButton FontSize="14" Margin="10, 0, 0, 0" Content="Врачебная" NavigateTo="MedicalPage"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </dxwui:PageAdornerControl.HeaderTemplate>
        </dxwui:PageAdornerControl>
        <Border  Grid.Row="1">


            <dxlc:LayoutControl  Orientation="Vertical" StretchContentVertically="False" Background="Transparent" Margin="0,23,0,-23">
                <dxlc:LayoutGroup Name="groupContainer" Orientation="Vertical" View="GroupBox">
                    <dxlc:LayoutGroup.GroupBoxStyle>
                        <Style TargetType="dxlc:GroupBox">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="TitleVisibility" Value="Collapsed" />
                        </Style>
                    </dxlc:LayoutGroup.GroupBoxStyle>

                    <dx:DXTabControl>
                        <dx:DXTabItem Header="Административная">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <dxlc:LayoutGroup Header="Общая информация" Grid.Row="0" Grid.Column="0" Name="layoutGroup1" View="GroupBox" Orientation="Vertical"
                                      ItemLabelsAlignment="Local" IsCollapsible="True">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        <dxlc:LayoutItem Label="*Фамилия:" Grid.Column="0" Grid.Row="0" Name="LastName" LabelPosition="Top" IsRequired="True" >
                                            <dxe:TextEdit  Margin="0 0 8 0"/>
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="*Имя:" Grid.Column="1" Grid.Row="0" Name="FirstName" LabelPosition="Top" IsRequired="True" >
                                            <dxe:TextEdit  Margin="0 0 8 0"/>
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Отчество:" Grid.Column="2" Grid.Row="0" Name="MiddleName" LabelPosition="Top" >
                                            <dxe:TextEdit />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Дата рождения:" Grid.Column="0" Grid.Row="1" Name="BirthDate" LabelPosition="Top" >
                                            <dxe:DateEdit Margin="0,0,8,8"  EditValue="{Binding RowData.Source.Row.BirthDate, Mode=TwoWay, 
                                                     UpdateSourceTrigger=PropertyChanged, Converter={StaticResource dateToString}}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Пол:" Grid.Column="1" Grid.Row="1" Name="Gender" LabelPosition="Top" >
                                            <dxe:ComboBoxEdit ItemsSource="{Binding GenderList}"                                      
                                                          SelectedItem="{Binding SelectedGender, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                          NullText="Пол"
                                              IsTextEditable="False" Margin="0,0,8,8">
                                                <dxe:ComboBoxEdit.StyleSettings>
                                                    <dxe:RadioComboBoxStyleSettings />
                                                </dxe:ComboBoxEdit.StyleSettings>
                                            </dxe:ComboBoxEdit>
                                            </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="ИНН:" Grid.Column="2" Grid.Row="1" Name="Inn" LabelPosition="Top" >
                                            <dxe:TextEdit  />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Адрес проживания:" Grid.ColumnSpan="4" Grid.Row="2" Name="Address" LabelPosition="Top" >
                                            <dxe:MemoEdit  EditValue="{Binding RowData.Source.Row.Address, Mode=TwoWay, 
                                                     UpdateSourceTrigger=PropertyChanged}"/>
                                        </dxlc:LayoutItem>
                                    </Grid>
                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="Контакты" Grid.Row="0" Grid.Column="1" Name="layoutGroup2" View="GroupBox" Orientation="Vertical"
                                      ItemLabelsAlignment="Local" IsCollapsible="True" Margin="10 0 0 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <dxlc:LayoutItem Label="Моб. телефон" AddColonToLabel="True" Grid.Row="0" LabelPosition="Top">
                                            <dxe:ButtonEdit IsTextEditable="True"
                                            AllowDefaultButton="False"
                                            MaskType="Simple"
                                            Mask="+7(999) 000-0000"
                                            MaskUseAsDisplayFormat="True"
                                            EditValue="{Binding Path=Employee.MobilePhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                                <dxe:ImageButtonInfo
                                    Glyph="pack://application:,,,/Resources/Icons/svg/mobile-alt.svg" Margin="0 2 2 2"/>
                                            </dxe:ButtonEdit>
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Дом. телефон" AddColonToLabel="True" Grid.Row="1" LabelPosition="Top">
                                            <dxe:ButtonEdit IsTextEditable="True"
                                            AllowDefaultButton="False"
                                            MaskType="Simple"
                                            Mask="(999) 000-0000"
                                            MaskUseAsDisplayFormat="True"
                                            EditValue="{Binding Path=Employee.MobilePhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
                                                <dxe:ImageButtonInfo
                                    Glyph="pack://application:,,,/Resources/Icons/svg/phone.svg" Margin="0 2 2 2"/>
                                            </dxe:ButtonEdit>
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Email" AddColonToLabel="True"  Grid.Row="2" LabelPosition="Top">
                                            <dxe:ButtonEdit IsTextEditable="True"
                                            AllowDefaultButton="False"
                                            MaskType="RegEx"
                                            Mask="(\w|[\.\-])+@(\w|[\-]+\.)*(\w|[\-]){2,63}\.[a-zA-Z]{2,4}"
                                            EditValue="{Binding Path=Email, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                            ValidateOnTextInput="True">
                                                <dxe:ImageButtonInfo
                                    Glyph="pack://application:,,,/Resources/Icons/svg/envelope.svg"  Margin="0 2 3 2"/>
                                            </dxe:ButtonEdit>
                                        </dxlc:LayoutItem>
                                    </Grid>
                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="Дополнительная информация" Grid.Row="1" Grid.Column="0" Name="layoutGroup3" View="GroupBox" Orientation="Vertical"
                                      ItemLabelsAlignment="Local" IsCollapsible="True" Margin="0 20 0 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <dxlc:LayoutItem Label="Серия и номер паспорта:" Grid.Row="0" Grid.Column="0" Name="Passport" LabelPosition="Top" >
                                            <dxe:TextEdit  EditValue="{Binding RowData.Source.Row.Passport, Mode=TwoWay, 
                                                     UpdateSourceTrigger=PropertyChanged}" Mask="d" Margin="0 0 8 0" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Дата выдачи:" Grid.Column="1" Grid.Row="0" Name="IssuedDate" LabelPosition="Top" >
                                            <dxe:DateEdit Margin="0,0,0,8"  EditValue="{Binding RowData.Source.Row.BirthDate, Mode=TwoWay, 
                                                     UpdateSourceTrigger=PropertyChanged, Converter={StaticResource dateToString}}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Кем выдан:" Grid.Row="1" Grid.ColumnSpan="2" Name="whoIssued" LabelPosition="Top" >
                                            <dxe:MemoEdit  EditValue="{Binding RowData.Source.Row.Comment, Mode=TwoWay, 
                                                     UpdateSourceTrigger=PropertyChanged}" />
                                        </dxlc:LayoutItem>
                                        <dxlc:LayoutItem Label="Комментарии:" Grid.Row="2" Grid.ColumnSpan="2" Name="Comment" LabelPosition="Top" >
                                            <dxe:MemoEdit  EditValue="{Binding RowData.Source.Row.Comment, Mode=TwoWay, 
                                                     UpdateSourceTrigger=PropertyChanged}" />
                                        </dxlc:LayoutItem>
                                    </Grid>
                                </dxlc:LayoutGroup>

                                <dxlc:LayoutGroup Header="Маркетинг" Grid.Row="1" Grid.Column="1" Name="layoutGroup5" View="GroupBox" Orientation="Vertical"
                                      ItemLabelsAlignment="Local" IsCollapsible="True" Margin="10 20 0 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <dxlc:LayoutItem Label="Категория клиентов:" Grid.Row="0" Name="ClientsCategory" LabelPosition="Top" >
                                            <dxe:TextEdit  Margin="0 0 0 0"/>
                                        </dxlc:LayoutItem>

                                        <dxlc:LayoutItem Label="Источник рекламы:" Grid.Row="1" Name="Advertising" LabelPosition="Top" >
                                            <dxe:TextEdit  Margin="0 0 0 0"/>
                                        </dxlc:LayoutItem>

                                        <dxlc:LayoutItem Label="Скидки:" Grid.Row="2" Name="Discount" LabelPosition="Top" >
                                            <dxe:ListBoxEdit ItemsSource="{Binding DiscountList}"                                      
                                                          SelectedItem="{Binding SelectedDiscount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                          NullText="ВЫберите скидки" Margin="0,0,0,8">
                                                <dxe:ListBoxEdit.StyleSettings>
                                                    <dxe:CheckedListBoxEditStyleSettings/>
                                                </dxe:ListBoxEdit.StyleSettings>
                                            </dxe:ListBoxEdit>
                                        </dxlc:LayoutItem>
                                    </Grid>
                                </dxlc:LayoutGroup>


                                <dxlc:LayoutGroup Header="Лечащие врачи" Grid.Row="2" Grid.ColumnSpan="2" Margin="0 20 0 20" 
                                                  Name="layoutGroup6" View="GroupBox" Orientation="Vertical" ItemLabelsAlignment="Local" IsCollapsible="True">


                                </dxlc:LayoutGroup>
                                <dxlc:LayoutGroup  Header="Полисы" Grid.Row="3" Grid.ColumnSpan="2"
                                                  Name="layoutGroup7" View="GroupBox" Orientation="Vertical" ItemLabelsAlignment="Local" IsCollapsible="True">


                                </dxlc:LayoutGroup>

                            </Grid>
                            
                        </dx:DXTabItem>


                        <dx:DXTabItem Header="ИДС, Документы">
                            <dxlc:LayoutGroup Header="ИДС, Документы"
                              Name="layoutGroup4"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">

                                <Grid DataContext="{StaticResource ResourceKey=Ids}">

                                    <FlowDocumentScrollViewer VerticalScrollBarVisibility="Disabled">
                                        <FlowDocument>
                                            <List FontSize="12">
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSOnInjection">
                                                            <Run>ИДС на инъекционную анестезию</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSCariesTreatment">
                                                            <Run>ИДС на лечение кариеса и иных болезней твердых тканей зубов</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSUrgentHelp">
                                                            <Run>ИДС на неотложную помощь</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem >
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSOrthodonticTreatment">
                                                            <Run>ИДС на ортодонтическое лечение</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSOrthopedicTreatment">
                                                            <Run>ИДС на ортопедическое лечение</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSDisclaimerGuarantees">
                                                            <Run>ИДС на отказ от гарантий (как временная мера)</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSParadonticTreatment">
                                                            <Run>ИДС на парадонтологическое лечение</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSDiagnosticManipulations">
                                                            <Run>ИДС на проведение диагностических манипуляций (рентгендиагностику)</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSBoneAugmentation">
                                                            <Run>ИДС на проведение операции наращивания кости на участке верхнечелюстной пазухи (синус-лифтинг)</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSProcessReconstruction">
                                                            <Run>ИДС на проведение операций по реконструкции альвеолярного отростка</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSSurgery">
                                                            <Run>ИДС на проведение хирургической операции (удаление зуба, резекция)</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSTeethWhitening">
                                                            <Run>ИДС на процедуру отбеливания зубов</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSImplantPlacement">
                                                            <Run>ИДС на установку имплантата</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSTreatmentAndImplantation">
                                                            <Run>ИДС на хирургическое лечение и имплантацию</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSEndodonticTreatment">
                                                            <Run>ИДС на эндодонтическое лечение</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSList">
                                                            <Run>Лист ИДС</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="TeethWhiteningRecommendations">
                                                            <Run>Рекомендации стоматолога по после отбеливания зубов</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="RecommendationsAfterImplantation">
                                                            <Run>Рекомендации стоматолога после имплантации</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterCariesAndPulpitis">
                                                            <Run>Рекомендации стоматолога после лечения кариеса и пульпита</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterProstheticsWithDentures">
                                                            <Run>Рекомендации стоматолога после протезированием  сьемными протезами</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterProstheticsWithCrowns">
                                                            <Run>Рекомендации стоматолога после протезирования коронками  и мостовидными ортопедическими конструкциями</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterProfOralHygiene">
                                                            <Run>Рекомендации стоматолога после профессиональной гигиены полости рта</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterToothExtraction">
                                                            <Run>Рекомендации стоматолога после удаления зуба</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="ForCareBraces">
                                                            <Run>Рекомендации стоматолога по уходу за брекетами</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>


                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="ReceiptCashOrder">
                                                            <Run>Приходный кассовый ордер</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="DentalServicesAgreement">
                                                            <Run>Договор об оказании стоматологических услуг</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="ContractGuarantor">
                                                            <Run>Договор Поручитель</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>
                                                <ListItem Margin="0 5 0 5">
                                                    <Paragraph>
                                                        <Hyperlink Command="{Binding OpenCommand}" CommandParameter="InstallmentAgreement">
                                                            <Run>Договор рассрочки</Run>
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </ListItem>

                                            </List>
                                        </FlowDocument>
                                    </FlowDocumentScrollViewer>
                                </Grid>
                            </dxlc:LayoutGroup>
                        </dx:DXTabItem>

                        <dx:DXTabItem Header="План лечения">
                            <dxlc:LayoutGroup Header="План лечения"
                              Name="layoutGroup8"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">
                            </dxlc:LayoutGroup>
                        </dx:DXTabItem>

                        <dx:DXTabItem Header="История болезни">
                            <dxlc:LayoutGroup Header="История болезни"
                              Name="layoutGroup9"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">
                            </dxlc:LayoutGroup>
                        </dx:DXTabItem>

                        <dx:DXTabItem Header="История посещений">
                            <dxlc:LayoutGroup Header="История посещений"
                              Name="layoutGroup10"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">
                            </dxlc:LayoutGroup>
                        </dx:DXTabItem>

                        <dx:DXTabItem Header="Файлы, изображения">
                            <dxlc:LayoutGroup Header="Файлы, изображения"
                              Name="layoutGroup11"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">
                            </dxlc:LayoutGroup>
                        </dx:DXTabItem>

                        <dx:DXTabItem Header="Карта зубов">
                            <dxlc:LayoutGroup Header="Карта зубов"
                              Name="layoutGroup12"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">
                            </dxlc:LayoutGroup>
                        </dx:DXTabItem>

                    </dx:DXTabControl>


                </dxlc:LayoutGroup>
            </dxlc:LayoutControl>
        </Border>
    </Grid>
</UserControl>