                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="СНИЛС:" Name="Snils" LabelPosition="Top"  Grid.Column="2">
                                    <dxe:TextEdit Margin="0 0 10 0"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Полис ОМС серия:" Name="PolisOMSSeria" LabelPosition="Top"  Grid.Column="3">
                                    <dxe:TextEdit Margin="0 0 10 0"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Полис ОМС номер:" Name="PolisOMSNumber" LabelPosition="Top"  Grid.Column="4">
                                    <dxe:TextEdit Margin="0 0 0 0"/>
                                </dxlc:LayoutItem>
                            </Grid>






                            <Grid Grid.Row="2" Margin="0 0 0 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <dxlc:LayoutItem Label="Страна:" Name="Country" LabelPosition="Top"  Grid.Column="0">
                                    <dxe:TextEdit  Margin="0 0 10 0"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Республика, край, область:" Name="Region" LabelPosition="Top"  Grid.Column="1">
                                    <dxe:TextEdit Margin="0 0 10 0"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Район:" Name="District" LabelPosition="Top"  Grid.Column="2" Margin="0 0 10 0">
                                    <dxe:TextEdit />
                                </dxlc:LayoutItem>

                                <dxlc:LayoutItem Label="Город:" Name="City" LabelPosition="Top"  Grid.Column="3" >
                                    <dxe:TextEdit/>
                                </dxlc:LayoutItem>
                            </Grid>






                            <Grid Grid.Row="3" Margin="0 5 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="130"/>
                                </Grid.ColumnDefinitions>


                                <dxlc:LayoutItem Label="Населенный пункт:" Name="Locality" LabelPosition="Top"  Grid.Column="0">
                                    <dxe:TextEdit  Margin="0 0 10 0"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Улица:" Name="Street" LabelPosition="Top"  Grid.Column="1">
                                    <dxe:TextEdit Margin="0 0 10 0"/>
                                </dxlc:LayoutItem>

                                <StackPanel  Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <dxlc:LayoutItem Label="Дом:" Name="House" LabelPosition="Top" >
                                        <dxe:TextEdit Margin="0 0 10 0" Width="60"/>
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="Квартира:" Name="Apartment" LabelPosition="Top">
                                        <dxe:TextEdit Width="60"/>
                                    </dxlc:LayoutItem>
                                </StackPanel>
                            </Grid>

                        </Grid>
                    </dxlc:LayoutGroup>






                    <dxlc:LayoutGroup Header="Дополнительная информация"
