<UserControl x:Class="Dental.Views.PatientCard.MainInfoPage"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
                      xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
                      xmlns:converter="clr-namespace:Dental.Infrastructures.Converters" 
                      xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase"
                      xmlns:vm ="clr-namespace:Dental.ViewModels" 
                      xmlns:tp ="clr-namespace:Dental.Views.PatientCard" 
                      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
                      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
                      xmlns:sys="clr-namespace:System;assembly=netstandard"
                      xmlns:commands ="clr-namespace:Dental.Infrastructures.Commands" 
                      mc:Ignorable="d"
                      d:DesignHeight="300" d:DesignWidth="300"
                      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                     xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
                     xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" 
                     xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
             dx:ThemeManager.ThemeName="Office2019White">

    <UserControl.Resources>
        <commands:PrintCommand x:Key="Print"/>
        <vm:IdsViewModel x:Key="Ids"/>
        <vm:PatientCardViewModel x:Key="vm"/>
        <converter:DateToStringConverter x:Key="dateToString" />
        <DataTemplate x:Key="ItemHeaderTemplateOne">
            <Grid>
                <TextBlock Text="One"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ItemContentTemplateOne">
            <Grid x:Name="Grid_Content" Margin="100, 0, 100, 0">
                <Grid>
                    <TextBlock Text="One"/>
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>


    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Margin="5 5 5 0">

        <Grid x:Name="gridPC" DataContext="{StaticResource vm}" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>




            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" HorizontalAlignment="Left" Orientation="Horizontal">
                    <Image Height="25" Width="25" Margin="2 0 0 0">
                        <Image.Source>
                            <BitmapImage UriSource="pack://application:,,,/Resources/Icons/Template/User.png" />
                        </Image.Source>
                    </Image>
                    <TextBlock Text="{Binding Model.PatientCardNumber, Mode=TwoWay, StringFormat={}Карта пациента №{0}}" FontSize="18" Padding="0 8 5 0"/>
                </StackPanel>
                <dxb:BarContainerControl DockPanel.Dock="Top" HorizontalAlignment="Right">
                    
                    <dxb:ToolBarControl x:Name="fileToolBar" Caption="File" AllowCustomizationMenu="False" AllowQuickCustomization="False">
                      
                        <dxb:BarButtonItem IsVisible="{Binding BtnIconEditableVisible, Mode=TwoWay}" Content="Редактировать данные" 
                                           Glyph="{dx:DXImage SvgImages/XAF/State_ItemVisibility_Show.svg}" 
                                           LargeGlyph="{dx:DXImage SvgImages/XAF/State_ItemVisibility_Show.svg}" 
                                           Command="{Binding EditableCommand}"/>
                        <dxb:BarButtonItem IsVisible="{Binding BtnIconEditableHide, Mode=TwoWay}" Content="Редактировать данные" 
                                           Glyph="{dx:DXImage SvgImages/XAF/State_ItemVisibility_Hide.svg}" 
                                           LargeGlyph="{dx:DXImage SvgImages/XAF/State_ItemVisibility_Hide.svg}" 
                                           Command="{Binding EditableCommand}"/>
                      
                        <dxb:BarButtonItem Name="bSave" Content="Сохранить" IsEnabled="{Binding BtnIconEditableVisible, Mode=TwoWay}" Glyph="{dx:DXImage SvgImages/Outlook Inspired/Save.svg}" LargeGlyph="{dx:DXImage SvgImages/Outlook Inspired/Save.svg}" />
                        <dxb:BarItemLinkSeparator />
                    </dxb:ToolBarControl>
                </dxb:BarContainerControl>
            </DockPanel>






            <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" Grid.Row="1" >

                <dxlc:LayoutControl  Orientation="Vertical"  Background="Transparent" Padding="5">
                    <dxlc:LayoutGroup Name="groupContainer" Orientation="Vertical" View="GroupBox">
                        <dxlc:LayoutGroup.GroupBoxStyle>
                            <Style TargetType="dxlc:GroupBox">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="TitleVisibility" Value="Collapsed" />
                            </Style>
                        </dxlc:LayoutGroup.GroupBoxStyle>

                        <dx:DXTabControl >
                            <dx:DXTabItem Header="Административная">
                                <tp:MainInfo DataContext="{Binding}"/>
                            </dx:DXTabItem>


                            <dx:DXTabItem Header="ИДС, Документы">
                                <dxlc:LayoutGroup Header="ИДС, Документы"
                              Name="layoutGroup4"
                              View="GroupBox"
                              Orientation="Vertical"
                              ItemLabelsAlignment="Local"
                              IsCollapsible="True">

                                    <Grid DataContext="{StaticResource ResourceKey=Ids}">

                                        <FlowDocumentScrollViewer VerticalScrollBarVisibility="Disabled">
                                            <FlowDocument>
                                                <List FontSize="12">
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSOnInjection">
                                                                <Run>ИДС на инъекционную анестезию</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSCariesTreatment">
                                                                <Run>ИДС на лечение кариеса и иных болезней твердых тканей зубов</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSUrgentHelp">
                                                                <Run>ИДС на неотложную помощь</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem >
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSOrthodonticTreatment">
                                                                <Run>ИДС на ортодонтическое лечение</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSOrthopedicTreatment">
                                                                <Run>ИДС на ортопедическое лечение</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSDisclaimerGuarantees">
                                                                <Run>ИДС на отказ от гарантий (как временная мера)</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSParadonticTreatment">
                                                                <Run>ИДС на парадонтологическое лечение</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSDiagnosticManipulations">
                                                                <Run>ИДС на проведение диагностических манипуляций (рентгендиагностику)</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSBoneAugmentation">
                                                                <Run>ИДС на проведение операции наращивания кости на участке верхнечелюстной пазухи (синус-лифтинг)</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSProcessReconstruction">
                                                                <Run>ИДС на проведение операций по реконструкции альвеолярного отростка</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSSurgery">
                                                                <Run>ИДС на проведение хирургической операции (удаление зуба, резекция)</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSTeethWhitening">
                                                                <Run>ИДС на процедуру отбеливания зубов</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSImplantPlacement">
                                                                <Run>ИДС на установку имплантата</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSTreatmentAndImplantation">
                                                                <Run>ИДС на хирургическое лечение и имплантацию</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSEndodonticTreatment">
                                                                <Run>ИДС на эндодонтическое лечение</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="IDSList">
                                                                <Run>Лист ИДС</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="TeethWhiteningRecommendations">
                                                                <Run>Рекомендации стоматолога по после отбеливания зубов</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="RecommendationsAfterImplantation">
                                                                <Run>Рекомендации стоматолога после имплантации</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterCariesAndPulpitis">
                                                                <Run>Рекомендации стоматолога после лечения кариеса и пульпита</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterProstheticsWithDentures">
                                                                <Run>Рекомендации стоматолога после протезированием  сьемными протезами</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterProstheticsWithCrowns">
                                                                <Run>Рекомендации стоматолога после протезирования коронками  и мостовидными ортопедическими конструкциями</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterProfOralHygiene">
                                                                <Run>Рекомендации стоматолога после профессиональной гигиены полости рта</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="AfterToothExtraction">
                                                                <Run>Рекомендации стоматолога после удаления зуба</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="ForCareBraces">
                                                                <Run>Рекомендации стоматолога по уходу за брекетами</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>


                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="ReceiptCashOrder">
                                                                <Run>Приходный кассовый ордер</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="DentalServicesAgreement">
                                                                <Run>Договор об оказании стоматологических услуг</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="ContractGuarantor">
                                                                <Run>Договор Поручитель</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>
                                                    <ListItem Margin="0 5 0 5">
                                                        <Paragraph>
                                                            <Hyperlink Command="{Binding OpenCommand}" CommandParameter="InstallmentAgreement">
                                                                <Run>Договор рассрочки</Run>
                                                            </Hyperlink>
                                                        </Paragraph>
                                                    </ListItem>

                                                </List>
                                            </FlowDocument>
                                        </FlowDocumentScrollViewer>
                                    </Grid>
                                </dxlc:LayoutGroup>
                            </dx:DXTabItem>

                            <dx:DXTabItem Header="План лечения и счета" >
                                <tp:TreatmentPlan DataContext="{Binding}"/>
                            </dx:DXTabItem>
                            <dx:DXTabItem Header="Приемы">
                                <tp:VisitStore DataContext="{Binding}"/>
                            </dx:DXTabItem>
                            <dx:DXTabItem Header="Карта зубов">
                                <tp:TeethPage DataContext="{Binding}" />
                            </dx:DXTabItem>

                        </dx:DXTabControl>


                    </dxlc:LayoutGroup>
                </dxlc:LayoutControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>