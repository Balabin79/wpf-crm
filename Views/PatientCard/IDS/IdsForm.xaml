<Window x:Class="Dental.Views.PatientCard.IDS.IdsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Dental.Views.PatientCard.IDS" 
        xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit"
        xmlns:vm ="clr-namespace:Dental.ViewModels" 
       mc:Ignorable="d" 
       d:DesignHeight="450" d:DesignWidth="800"
       xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
       Title="ИДС, Документы" 
       dx:ThemeManager.ThemeName="Office2019White">

    <Grid>
        <Grid.DataContext>
            <vm:IdsViewModel/>
        </Grid.DataContext>
        <dxre:RichEditControl CommandBarStyle="Ribbon" DocumentSource="{Binding Path=DocumentSource}"/>
    </Grid>
</Window>
