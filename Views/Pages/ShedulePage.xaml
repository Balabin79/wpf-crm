<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dental.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduling" x:Class="Dental.Views.Pages.ShedulePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShedulePage">

    <Grid x:Name="GridSheduler" Margin="10" >
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <dxsch:SchedulerControl Name="Sheduler"
                              
               Width="{Binding ElementName=GridSheduler, Path=ActualWidth}"
               Height="{Binding ElementName=GridSheduler, Path=ActualHeight}"
               />
        </ScrollViewer>

    </Grid>
</Page>
