<Window x:Class="Dental.Views.WindowForms.ClientsSubscribesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dental.Views.Nomenclatures.WindowForms" 
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:vm ="clr-namespace:Dental.ViewModels"
        xmlns:converter="clr-namespace:Dental.Infrastructures.Converters" 
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        mc:Ignorable="d"
        Title="Рассылки"
        HorizontalAlignment="Center"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converter:DateToStringConverter x:Key="DateToString"/>
        <converter:FloatToStringConverter x:Key="FloatToString"/>
    </Window.Resources>
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Resources/Icons/Template/Transmit-Blue.png" />
    </Window.Icon>
    <Grid>
        <Grid Visibility="{Binding IsVisibleItemForm}">
            <GroupBox Margin="7" Padding="7" BorderBrush="LightGray" BorderThickness="1" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Path=Title}" Grid.Row="0" FontSize="15" FontWeight="DemiBold"/>
                    <GroupBox  Padding="7" BorderBrush="LightGray" BorderThickness="1" 
                          Header="Характеристики" VerticalAlignment="Top" Grid.Row="1">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="Название:"  Margin="0,0,8,3" />
                                <dxe:TextEdit  Grid.Row="1" Grid.Column="0" Text="{Binding Model.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True }" Margin="0,0,8,8" />

                                <TextBlock  Grid.Row="0" Grid.Column="1" Text="Дата рассылки:"  Margin="0,0,8,3" />
                                <dxe:DateEdit   Grid.Row="1" 
                                                Grid.Column="1" 
                                                EditValue="{Binding Model.DateSubscribe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Converter={StaticResource DateToString}}" 
                                                 MaskType="DateTimeAdvancingCaret" 
                                                 Mask="d"
                                                Margin="0,0,0,8" />

                                
                                <TextBlock  Grid.Row="2" Grid.Column="0" Text="Категория клиентов:"  Margin="0,0,8,3" />
                                <dxe:ComboBoxEdit Grid.Row="3" Grid.Column="0"  
                                                  ItemsSource="{Binding ClientsGroups}"
                                                  DisplayMember="Name" 
                                                  NullText="Выберите категорию"
                                                  SelectedItem="{Binding SelectedClientGroup, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              IsTextEditable="False" Margin="0,0,8,8"
                                               />
                         

                                <TextBlock  Grid.Row="2" Grid.Column="1" Text="Тип рассылки:"  Margin="0,0,8,3" />
                                <dxe:ComboBoxEdit Grid.Row="3" Grid.Column="1"  
                                                  ItemsSource="{Binding TypesSubscribe}"
                                                  DisplayMember="Name" 
                                                  NullText="Выберите тип рассылки"
                                                  SelectedItem="{Binding SelectedType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              IsTextEditable="False" Margin="0,0,0,8"
                                               />

                                <TextBlock  Grid.Row="4" Grid.Column="0" Text="Статус рассылки:"  Margin="0,0,0,3" />
                                <dxe:ComboBoxEdit Grid.Row="5" Grid.Column="0"                  
                                                  ItemsSource="{Binding StatusesSubscribe}"
                                                  DisplayMember="Name" 
                                                  NullText="Выберите категорию"
                                                  SelectedItem="{Binding SelectedStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              IsTextEditable="False" Margin="0,0,8,8"
                                               />

                                <TextBlock  Grid.Row="4" Grid.Column="1" Text="Родительская группа:"  Margin="0,0,0,3" />
                                <dxe:ComboBoxEdit Grid.Row="5" Grid.Column="1"  ItemsSource="{Binding Group}"
                                                          DisplayMember="Name" NullText="Выберите родительскую директорию"
                                                          SelectedItem="{Binding SelectedGroup, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              IsTextEditable="False" Margin="0,0,0,8"
                                               />


                                <TextBlock  Grid.Row="6" Grid.Column="0" Text="val1:"  Margin="0,0,8,3" />


                                <dx:SplitButton Grid.Row="7" Grid.Column="0"  
                                                Padding="0"
                                                  Margin="0,0,8,8"                                                   
                                                  Name="ButtonEditSettings"
                                                  HorizontalContentAlignment="Left"
                                                  Content="{Binding Model.Settings.TitleBtn, Mode=OneWay}"
                                               >
                                    <dx:SplitButton.PopupContent >
                                        <GroupBox  BorderBrush="LightGray" BorderThickness="1" Margin="5" Padding="10" Header="Регистрационные данные и банковские реквизиты" VerticalAlignment="Top">
                                            
                                            <dxlc:LayoutGroup Orientation="Horizontal" Margin="0 0 0 5" >
                                                
                                                <dxlc:LayoutGroup Orientation="Vertical" Margin="0 0 2 0">
                                                    <dxlc:LayoutItem  Label="Тип сообщения:" LabelPosition="Top" HorizontalAlignment="Stretch">

                                                    </dxlc:LayoutItem>







                                                    <dxlc:LayoutItem  Label="Имя отправителя:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:TextEdit 
                                                            ToolTip="Имя отправителя, отображаемое в телефоне получателя. Разрешены английские буквы, цифры, пробел и некоторые символы. Длина – 11 символов или 15 цифр. Все имена регистрируются в личном кабинете сервиса"
                                                            Text="{Binding Model.Settings.Sender, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}"  />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Транслит:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:ComboBoxEdit  
                                                            ToolTip="Сообщение необходимо перевести в транслит"
                                                            SelectedIndex="{Binding Model.Settings.Translit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                            NullText="Транслит" 
                                                            IsTextEditable="False">
                                                            <dxe:ComboBoxEdit.Items>
                                                                <dxe:ComboBoxEditItem Content="Не переводить в транслит (по умолчанию)"  />
                                                                <dxe:ComboBoxEditItem Content="Перевести в транслит в виде &quot;translit&quot;" />
                                                                <dxe:ComboBoxEditItem Content="Перевести в транслит в виде &quot;mpaHc / Ium'" />
                                                            </dxe:ComboBoxEdit.Items>
                                                            <dxe:ComboBoxEdit.StyleSettings>
                                                                <dxe:RadioComboBoxStyleSettings />
                                                            </dxe:ComboBoxEdit.StyleSettings>
                                                        </dxe:ComboBoxEdit>
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Сокращенные ссылки:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:ComboBoxEdit 
                                                            ToolTip="Автоматически сокращать ссылки в сообщениях. Позволяет заменять ссылки в тексте сообщения на короткие для сокращения длины, а также для отслеживания количества переходов в личном кабинете сервиса."
                                                            SelectedIndex="{Binding Model.Settings.Tinyurl, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                            NullText="Транслит" 
                                                            IsTextEditable="False">
                                                            <dxe:ComboBoxEdit.Items>
                                                                <dxe:ComboBoxEditItem Content="Оставить ссылки в тексте сообщения без изменений (по умолчанию)"  />
                                                                <dxe:ComboBoxEditItem Content="Сократить ссылки" />
                                                            </dxe:ComboBoxEdit.Items>
                                                            <dxe:ComboBoxEdit.StyleSettings>
                                                                <dxe:RadioComboBoxStyleSettings />
                                                            </dxe:ComboBoxEdit.StyleSettings>
                                                        </dxe:ComboBoxEdit>
                                                    </dxlc:LayoutItem>
                                                    
                                                    <dxlc:LayoutItem  Label="Дата/Время отправки:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:DateEdit
                                                        ToolTip="Время отправки SMS-сообщения абоненту. Если указано уже прошедшее время, то сообщение будет отправлено немедленно"
                                                        EditValue="{Binding Model.Settings.Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateToString}}" 
                                                        x:Name="DateEditWithNavigatorAndTimePicker" Mask="G" MaskUseAsDisplayFormat="True">
                                                            <dxe:DateEdit.StyleSettings>
                                                                <dxe:DateEditNavigatorWithTimePickerStyleSettings/>
                                                            </dxe:DateEdit.StyleSettings>
                                                        </dxe:DateEdit>
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Часовой пояс:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:TextEdit EditValueChanged="TextEdit_EditValueChanged" Mask="d" MaskType="Numeric"
                                                        ToolTip="Часовой пояс, в котором задается параметр &quot;Дата/Время отправки&quot;. Указывается относительно московского времени. Параметр может быть как положительным, так и отрицательным. Если равен 0, то будет использован московский часовой пояс, если же параметр задан, то часовой пояс будет взят из настроек Клиента в личном кабинете сервиса."
                                                        EditValue="{Binding Model.Settings.Tz, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Временной диапазон рассылки:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:TextEdit EditValueChanged="TextEdit_EditValueChanged" Mask="f" MaskType="Numeric"
                                                        ToolTip="Промежуток времени, в течение которого необходимо отправить рассылку. Представляет собой число  диапазоне от 0.1 до 720 часов. Применяется совместно с параметром &quot;Интервал, частота рассылки&quot;. Данный параметр позволяет растянуть рассылку во времени для постепенного получения SMS-сообщений абонентами."
                                                        EditValue="{Binding Model.Settings.Period, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Интервал, частота рассылки:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:TextEdit EditValueChanged="TextEdit_EditValueChanged" Mask="d" MaskType="Numeric"
                                                        ToolTip="Интервал или частота, с которой нужно отправлять SMS-рассылку на очередную группу номеров. Количество номеров в группе рассчитывается автоматически на основе параметров &quot;Временной диапазон рассылки&quot; и &quot;Интервал, частота рассылки&quot;. Задается в промежутке от 1 до 1440 минут. Без параметра &quot;Временной диапазон рассылки&quot; параметр &quot;Интервал, частота рассылки&quot; игнорируется"
                                                        EditValue="{Binding Model.Settings.Freq, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Flash сообщения:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:ComboBoxEdit 
                                                            ToolTip="Признак Flash сообщения, отображаемого сразу на экране телефона."
                                                            SelectedIndex="{Binding Model.Settings.Flash, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                            NullText="Flash сообщение" 
                                                            IsTextEditable="False">
                                                            <dxe:ComboBoxEdit.Items>
                                                                <dxe:ComboBoxEditItem Content="Обычное сообщение (по умолчанию)"  />
                                                                <dxe:ComboBoxEditItem Content="Flash сообщение" />
                                                            </dxe:ComboBoxEdit.Items>
                                                            <dxe:ComboBoxEdit.StyleSettings>
                                                                <dxe:RadioComboBoxStyleSettings />
                                                            </dxe:ComboBoxEdit.StyleSettings>
                                                        </dxe:ComboBoxEdit>
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Wap-push сообщения:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:ComboBoxEdit 
                                                            TextWrapping="Wrap"
                                                            PrintTextWrapping="Wrap"
                                                           
                                                            SelectedIndex="{Binding Model.Settings.Push, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                            NullText="Flash сообщение" 
                                                            IsTextEditable="False">
                                                            <dxe:ComboBoxEdit.ToolTip>
                                                                <TextBlock TextWrapping="Wrap"
                                                                    Text="Признак wap-push сообщения, с помощью которого можно отправить интернет-ссылку на телефон. Если wap-push сообщение, то в параметре &quot;Содержимое&quot; необходимо передать ссылку и заголовок через &quot;Wap-push заголовок&quot;."/>
                                                            </dxe:ComboBoxEdit.ToolTip>
                                                            <dxe:ComboBoxEdit.Items>
                                                                <dxe:ComboBoxEditItem Content="Обычное сообщение (по умолчанию)"  />
                                                                <dxe:ComboBoxEditItem Content="Wap-push сообщение" />
                                                            </dxe:ComboBoxEdit.Items>
                                                            <dxe:ComboBoxEdit.StyleSettings>
                                                                <dxe:RadioComboBoxStyleSettings />
                                                            </dxe:ComboBoxEdit.StyleSettings>
                                                        </dxe:ComboBoxEdit>
                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="Заголовок Wap-push сообщения:" LabelPosition="Top" HorizontalAlignment="Stretch">
                                                        <dxe:TextEdit 
                                                        ToolTip="Заголовок Wap-push сообщения"
                                                        EditValue="{Binding Model.Settings.TitleWap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </dxlc:LayoutItem>
                                                </dxlc:LayoutGroup>



                                                <dxlc:LayoutGroup Orientation="Vertical" Margin="0 0 2 0">

                                                    <dxlc:LayoutItem  Label="=:" LabelPosition="Top" HorizontalAlignment="Stretch">

                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="=:" LabelPosition="Top" HorizontalAlignment="Stretch">

                                                    </dxlc:LayoutItem>

                                                    <dxlc:LayoutItem  Label="=:" LabelPosition="Top" HorizontalAlignment="Stretch">

                                                    </dxlc:LayoutItem>

                                                </dxlc:LayoutGroup>

                                            </dxlc:LayoutGroup>
                                        </GroupBox>
                                    </dx:SplitButton.PopupContent>

                                </dx:SplitButton>


                                <TextBlock  Grid.Row="6" Grid.Column="1" Text="val2:"  Margin="0,0,0,3" />
                                <dxe:ComboBoxEdit Grid.Row="7" Grid.Column="1"                  
                                                  ItemsSource="{Binding StatusesSubscribe}"
                                                  DisplayMember="Name" 
                                                  NullText="Выберите категорию"
                                                  SelectedItem="{Binding SelectedStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              IsTextEditable="False" Margin="0,0,0,8"
                                               />

                                
                                <TextBlock  Grid.Row="8" Grid.ColumnSpan="2" Text="Содержимое сообщения:"  Margin="0,0,0,3" />
                                <dxe:MemoEdit Grid.Row="9" Grid.ColumnSpan="2" Height="50" ShowIcon="False" ShowText="True" ShowNullTextForEmptyValue="True"
                                              EditValue="{Binding Model.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"
                                              NullText="Содержимое сообщения, отправляемого пользователям" VerticalContentAlignment="Top"
                                              MemoTextWrapping="Wrap" TextWrapping="Wrap"
                                               />
                                <TextBlock  Grid.Row="10" Grid.ColumnSpan="2" Text="Комментарий:"  Margin="0,0,0,3" />
                                <dxe:MemoEdit Grid.Row="11" Grid.ColumnSpan="2"  
                                              MemoTextWrapping="Wrap" TextWrapping="Wrap"
                                              EditValue="{Binding Model.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"
                                               />
 

                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <StackPanel Height="25" Grid.Row="2" Margin="0 10 0 0" Orientation="Horizontal" HorizontalAlignment="Right" >
                        <dx:SimpleButton Content="Сохранить" VerticalContentAlignment="Center" Command="{Binding SaveCommand}" />
                        <dx:SimpleButton Content="Закрыть" VerticalContentAlignment="Center" Command="{Binding CancelFormCommand}" Margin="4 0 0 0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>


        <Grid Visibility="{Binding IsVisibleGroupForm}">
            <GroupBox Margin="7" Padding="7" BorderBrush="LightGray" BorderThickness="1" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Path=Title}" Grid.Row="0" FontSize="16" FontWeight="DemiBold"/>
                    <GroupBox  Padding="7" BorderBrush="LightGray" BorderThickness="1" 
                          Header="Характеристики" VerticalAlignment="Top" Grid.Row="1">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock  Grid.Row="0" Text="Название:"  Margin="0,0,8,3" />
                                <dxe:TextEdit  Grid.Row="1"  Text="{Binding Model.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True }" Margin="0,0,0,8" />

                                <TextBlock  Grid.Row="2"  Text="Родительская группа:"  Margin="0,0,0,3" />
                                <dxe:ComboBoxEdit ItemsSource="{Binding Group}"
                                                          DisplayMember="Name"
                                                          NullText="Выберите родительскую директорию"
                                                          SelectedItem="{Binding SelectedGroup, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                              IsTextEditable="False" Grid.Row="3"   Margin="0,0,0,8"
                                               />
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <StackPanel Height="25" Grid.Row="5" Margin="0 10 0 0" Orientation="Horizontal" HorizontalAlignment="Right" >
                        <dx:SimpleButton Content="Сохранить" VerticalContentAlignment="Center" Command="{Binding SaveCommand}" />
                        <dx:SimpleButton Content="Закрыть" VerticalContentAlignment="Center" Command="{Binding CancelFormCommand}" Margin="4 0 0 0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

        </Grid>


    </Grid>
</Window>
