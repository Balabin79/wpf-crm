<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dental.Views.HandbooksPages"
      xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
      x:Class="Dental.Views.HandbooksPages.NewOrganization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewOrganization">

    <Grid>

        <dxlc:LayoutControl HorizontalAlignment="Stretch" VerticalAlignment="Top" >

            <dxlc:LayoutGroup Header="{Binding}"                      
                          View="GroupBox"
                          Height="235"                            
                          ItemSpace="10"
                          dxlc:LayoutControl.AllowVerticalSizing="True">
                <Image Source="{Binding Logo}" HorizontalAlignment="Left" />
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
            </dxlc:LayoutGroup>

         
        </dxlc:LayoutControl>
    </Grid>
</Page>
