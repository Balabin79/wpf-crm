<dx:ThemedWindow x:Class="Dental.MainWindow" Title="{Binding Path=Title}" Visibility="Visible" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:Dental" 
    xmlns:viewModels="clr-namespace:Dental.ViewModels" 
    xmlns:pages="clr-namespace:Dental.Views.HandbooksPages" 
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:img="clr-namespace:Dental.Resources.Icons"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"      
    xmlns:conv ="clr-namespace:Dental.Infrastructures.Converters">

    <dx:ThemedWindow.Resources>
    <conv:ImageConverter x:Key="ImageConverter" />
    
        <viewModels:HandbooksViewModel x:Key="viewModel"/>
    </dx:ThemedWindow.Resources>


<dx:ThemedWindow.DataContext>
    <viewModels:HandbooksViewModel />
</dx:ThemedWindow.DataContext>


<Grid VerticalAlignment="Stretch" Margin="0,0, 0, 0">
    <Grid.RowDefinitions>
        <RowDefinition Height="200" />
        <RowDefinition Height="*" />
        <RowDefinition Height="10" />
    </Grid.RowDefinitions>

    <dxr:RibbonControl RibbonStyle="Office2019" ShowApplicationButton="False" Grid.Row="0" Name="RibbonControl">
        <dxr:RibbonDefaultPageCategory>
            <dxr:RibbonPage Caption="Рабочий стол" >
                    <dxr:RibbonPageGroup Caption="Раздел 1">

                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>

                <dxr:RibbonPage Caption="Основное" >
                    <dxr:RibbonPageGroup Caption="Основной раздел">
                        <dxb:BarButtonItem Content="Расписание" RibbonStyle="Default" 
                                           ToolTip="Расписание"
                                           Glyph="{Binding Path=SheduleImage}"
                                           MediumGlyph="{Binding Path=SheduleImage}" 
                                           LargeGlyph="{Binding Path=SheduleImage}"                                        
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}"/>


                        <dxb:BarButtonItem Content="Новый пациент" RibbonStyle="Default" 
                                           ToolTip="Новый пациент"
                                           Glyph="{Binding Path=NewPatientImage}"
                                           MediumGlyph="{Binding Path=NewPatientImage}" 
                                           LargeGlyph="{Binding Path=NewPatientImage}"                                        
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}"/>

                        <dxb:BarButtonItem Content="Список пациентов" RibbonStyle="Default" 
                                           ToolTip="Список пациентов"
                                           Glyph="{Binding Path=ListPatientsImage}"
                                           MediumGlyph="{Binding Path=ListPatientsImage}" 
                                           LargeGlyph="{Binding Path=ListPatientsImage}"                                       
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}"/>

                    </dxr:RibbonPageGroup>
                    <dxr:RibbonPageGroup Caption="Маркетинг">
                        <dxb:BarButtonItem Content="Журнал обзвона" RibbonStyle="Default" 
                                           ToolTip="Журнал обзвона"
                                           Glyph="{Binding Path=ClientCalling}"
                                           MediumGlyph="{Binding Path=ClientCalling}" 
                                           LargeGlyph="{Binding Path=ClientCalling}"                                        
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}"/>

                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>
 

                <dxr:RibbonPage Caption="Основные справочники">

                    <dxr:RibbonPageGroup Caption="Шаблоны">
                        <dxb:BarButtonItem Content="Диагноз" 
                                           RibbonStyle="Default"                                          
                                           Glyph="{Binding Path=DiagnosImage}"
                                           MediumGlyph="{Binding Path=DiagnosImage}"
                                           LargeGlyph="{Binding Path=DiagnosImage}"                                        
                                           ToolTip="Шаблоны диагнозов"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:Diagnoses}"                                       
                                           >
                        </dxb:BarButtonItem>
                        <dxb:BarButtonItem Content="Дневник" 
                                           RibbonStyle="Default" 
                                           Glyph="{Binding Path=DiaryImage}"
                                           MediumGlyph="{Binding Path=DiaryImage}"
                                           LargeGlyph="{Binding Path=DiaryImage}" 
                                           ToolTip="Шаблоны дневников"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:Diary}"
                                           />
                        <dxb:BarButtonItem Content="Первичный осмотр"
                                           RibbonStyle="Default" 
                                           Glyph="{Binding Path=InitialImage}"
                                           MediumGlyph="{Binding Path=InitialImage}"
                                           LargeGlyph="{Binding Path=InitialImage}" 
                                           ToolTip="Первичный осмотр"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:InitialInspection}"/>
                        <dxb:BarButtonItem Content="План лечения"  
                                           RibbonStyle="Default" 
                                           Glyph="{Binding Path=PlanImage}"
                                           MediumGlyph="{Binding Path=PlanImage}"
                                           LargeGlyph="{Binding Path=PlanImage}"
                                           ToolTip="План лечения"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:TreatmentPlan}"/>
                    </dxr:RibbonPageGroup>


                    <dxr:RibbonPageGroup Caption="Кадровые справочники" >
                        <dxb:BarButtonItem Content="Добавить сотрудника" RibbonStyle="Default" 
                                           Glyph="{Binding Path=EmployeeImage}"
                                           MediumGlyph="{Binding Path=EmployeeAddImage}" 
                                           LargeGlyph="{Binding Path=EmployeeAddImage}" 
                                           ToolTip="Добавить нового сотрудника"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}" />

                        <dxb:BarButtonItem Content="Список сотрудников" RibbonStyle="Default" 
                                           Glyph="{Binding Path=EmployeeImage}"
                                           MediumGlyph="{Binding Path=EmployeeImage}" 
                                           LargeGlyph="{Binding Path=EmployeeImage}"                                                
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}" />

                        <dxb:BarButtonItem Content="Статусы сотрудников"
                                           Glyph="{Binding Path=StatusEmployeeImage}"
                                           MediumGlyph="{Binding Path=StatusEmployeeImage}" 
                                           LargeGlyph="{Binding Path=StatusEmployeeImage}" 
                                           ToolTip="Статусы сотрудников"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Statuses}"/>
                        
                        <dxb:BarButtonItem Content="Список профессий"
                                           RibbonStyle="Default" 
                                           Glyph="{Binding Path=SpecialityImage}"
                                           MediumGlyph="{Binding Path=SpecialityImage}" 
                                           LargeGlyph="{Binding Path=SpecialityImage}"   
                                           ToolTip="Все специальности компании"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Specialities}"/>

                        <dxb:BarButtonItem Content="Профессии сотрудников"
                                           RibbonStyle="Default" 
                                           Glyph="{Binding Path=SpecialityEmployeeImage}"
                                           MediumGlyph="{Binding Path=SpecialityEmployeeImage}" 
                                           LargeGlyph="{Binding Path=SpecialityEmployeeImage}"   
                                            ToolTip="Профессии сотрудников"
                                            Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:EmployesSpecialities}"/>

                        <dxb:BarButtonItem Content="Сотрудники организаций"
                                           RibbonStyle="Default" 
                                           Glyph="{Binding Path=OrganizationEmployeeImage}"
                                           MediumGlyph="{Binding Path=OrganizationEmployeeImage}" 
                                           LargeGlyph="{Binding Path=OrganizationEmployeeImage}"   
                                            ToolTip="Сотрудники организаций"
                                            Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:EmployesInOrganizations}"/>

                    </dxr:RibbonPageGroup >

                    <dxr:RibbonPageGroup Caption="Прочее" >


                        <dxb:BarButtonItem Content="Организации" 
                                           Glyph="{Binding Path=OrganizationImage}"
                                           MediumGlyph="{Binding Path=OrganizationImage}" 
                                           LargeGlyph="{Binding Path=OrganizationImage}" 
                                           ToolTip="Список организаций"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Organizations}"/>
                       
                        <dxb:BarButtonItem Content="Страховые компании" 
                                           Glyph="{Binding Path=InsuranceCompanyImage}"
                                           MediumGlyph="{Binding Path=InsuranceCompanyImage}" 
                                           LargeGlyph="{Binding Path=InsuranceCompanyImage}" 
                                           ToolTip="Список организаций"
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:InsuranceCompany}"/>
                    </dxr:RibbonPageGroup>

                    
                </dxr:RibbonPage>
                <dxr:RibbonPage Caption="Маркетинг и реклама">
                    <dxr:RibbonPageGroup Caption="Справочники">
                        <dxb:BarButtonItem Content="Справочник программ лояльности"
                                           Glyph="{Binding Path=LoyalityImage}"
                                           MediumGlyph="{Binding Path=LoyalityImage}" 
                                           LargeGlyph="{Binding Path=LoyalityImage}" 
                                           ToolTip="Программы лояльности"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:LoyaltyPrograms}"/>
                        
                        <dxb:BarButtonItem Content="Рекламные источники"
                                           Glyph="{Binding Path=AdvertisingImage}"
                                           MediumGlyph="{Binding Path=AdvertisingImage}" 
                                           LargeGlyph="{Binding Path=AdvertisingImage}" 
                                           ToolTip="Рекламные источники"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:Advertising}"/>
                        
                        <dxb:BarButtonItem Content="Группы скидок"
                                           Glyph="{Binding Path=BonusImage}"
                                           MediumGlyph="{Binding Path=BonusImage}" 
                                           LargeGlyph="{Binding Path=BonusImage}" 
                                           ToolTip="Группы скидок"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:DiscountGroups}"/>

                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>

                <dxr:RibbonPage Caption="Номенклатура">
                <dxr:RibbonPageGroup Caption="Прайсы">
                    <dxb:BarButtonItem Content="Прайс-лист" 
                                           Glyph="{Binding Path=DiaryImage}"
                                           LargeGlyph="{Binding Path=DiaryImage}" 
                                           Margin="0 0 20 0"/>
                    <dxb:BarButtonItem Content="Прайс-лист тех.лабораторий"
                                           LargeGlyph="{dx:DXImage Images/Function Library/Financial_32x32.png}" Margin="0 0 20 0" Glyph="{dx:DXImage Images/Function Library/Financial_32x32.png}"/>
                </dxr:RibbonPageGroup>
                </dxr:RibbonPage>

                <dxr:RibbonPage Caption="Настройки">
                    <dxr:RibbonPageGroup Caption="Администрирование">
                        
                        <dxb:BarButtonItem Content="Роли"
                                           Glyph="{Binding Path=RoleImage}"
                                           MediumGlyph="{Binding Path=RoleImage}" 
                                           LargeGlyph="{Binding Path=RoleImage}" 
                                           ToolTip="Роли"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:Roles}"/>

                        <dxb:BarButtonItem Content="Пользователи"
                                           Glyph="{Binding Path=UsersImage}"
                                           MediumGlyph="{Binding Path=UsersImage}" 
                                           LargeGlyph="{Binding Path=UsersImage}" 
                                           ToolTip="Пользователи"
                                           Command="{Binding LeftMenuClick}" 
                                           CommandParameter="{x:Type pages:Roles}"/>

                        <dxb:BarButtonItem Content="Права" RibbonStyle="Default" 
                                           ToolTip="Права"
                                           Glyph="{Binding Path=AccessImage}"
                                           MediumGlyph="{Binding Path=AccessImage}" 
                                           LargeGlyph="{Binding Path=AccessImage}"                                    
                                           Command="{Binding LeftMenuClick}" CommandParameter="{x:Type pages:Employes}"/>
                        </dxr:RibbonPageGroup>
                    </dxr:RibbonPage>

                <dxr:RibbonPage Caption="О программе">
                    <dxr:RibbonPageGroup Caption="О программе">
                        
                    </dxr:RibbonPageGroup>
                </dxr:RibbonPage>

            </dxr:RibbonDefaultPageCategory>

    </dxr:RibbonControl>




<Frame Source="{Binding CurrentPage}" Name="FramePage" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}" Opacity="{Binding FrameOpacity}" />

<!--<t:Ticket x:Name="Ticket" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      DataContext="{Binding Source={StaticResource TicketViewModel}}"
                      Width="Auto" Height="Auto" Visibility="{Binding OpenModalWindow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Grid.ColumnSpan="3"  
                      Grid.RowSpan="3"/>-->


    </Grid>

</dx:ThemedWindow>